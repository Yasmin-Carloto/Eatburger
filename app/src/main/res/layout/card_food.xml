<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linear_food_card"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_food_type_text"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/image_food_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/text_name_food_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="8dp"
                android:fontFamily="@font/montserrat_light"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_wait_time_food_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>

                <TextView
                    android:id="@+id/text_price_food_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_weight="0"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/gray"/>

            </LinearLayout>

            <CheckBox
                android:saveEnabled="true"
                android:id="@+id/checkbox_food_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="16dp"
                android:background="@drawable/bg_checkbox"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingHorizontal="8dp"
                android:text="@string/text_add"
                android:textColor="@color/gray"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>